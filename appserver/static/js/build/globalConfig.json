{
    "meta": {
        "version": "1.0.0", 
        "restRoot": "TA_dmarc", 
        "apiVersion": "3.0.0", 
        "name": "TA-dmarc", 
        "displayName": "TA-dmarc"
    }, 
    "pages": {
        "configuration": {
            "tabs": [
                {
                    "entity": [
                        {
                            "defaultValue": "INFO", 
                            "field": "loglevel", 
                            "label": "Log level", 
                            "options": {
                                "autoCompleteFields": [
                                    {
                                        "label": "DEBUG", 
                                        "value": "DEBUG"
                                    }, 
                                    {
                                        "label": "INFO", 
                                        "value": "INFO"
                                    }, 
                                    {
                                        "label": "WARNING", 
                                        "value": "WARNING"
                                    }, 
                                    {
                                        "label": "ERROR", 
                                        "value": "ERROR"
                                    }, 
                                    {
                                        "label": "CRITICAL", 
                                        "value": "CRITICAL"
                                    }
                                ], 
                                "disableSearch": true
                            }, 
                            "type": "singleSelect"
                        }
                    ], 
                    "title": "Logging", 
                    "name": "logging"
                }
            ], 
            "title": "Configuration", 
            "description": "Set up your add-on"
        }, 
        "inputs": {
            "table": {
                "moreInfo": [
                    {
                        "field": "name", 
                        "label": "Name"
                    }, 
                    {
                        "field": "interval", 
                        "label": "Interval"
                    }, 
                    {
                        "field": "index", 
                        "label": "Index"
                    }, 
                    {
                        "field": "disabled", 
                        "label": "Status"
                    }, 
                    {
                        "field": "dmarc_directory", 
                        "label": "Directory"
                    }, 
                    {
                        "field": "quiet_time", 
                        "label": "Quiet time"
                    }, 
                    {
                        "field": "resolve_ip", 
                        "label": "Resolve IP"
                    }
                ], 
                "header": [
                    {
                        "field": "name", 
                        "label": "Name"
                    }, 
                    {
                        "field": "interval", 
                        "label": "Interval"
                    }, 
                    {
                        "field": "index", 
                        "label": "Index"
                    }, 
                    {
                        "field": "disabled", 
                        "label": "Status"
                    }
                ], 
                "actions": [
                    "edit", 
                    "enable", 
                    "delete", 
                    "clone"
                ]
            }, 
            "services": [
                {
                    "entity": [
                        {
                            "required": true, 
                            "label": "Name", 
                            "type": "text", 
                            "field": "name", 
                            "validators": [
                                {
                                    "pattern": "^[a-zA-Z]\\w*$", 
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores.", 
                                    "type": "regex"
                                }, 
                                {
                                    "minLength": 1, 
                                    "maxLength": 100, 
                                    "errorMsg": "Length of input name should be between 1 and 100", 
                                    "type": "string"
                                }
                            ], 
                            "help": "Enter a unique name for the data input"
                        }, 
                        {
                            "required": true, 
                            "label": "Interval", 
                            "type": "text", 
                            "field": "interval", 
                            "validators": [
                                {
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$", 
                                    "errorMsg": "Interval must be an integer.", 
                                    "type": "regex"
                                }
                            ], 
                            "help": "Time interval of input in seconds."
                        }, 
                        {
                            "required": true, 
                            "defaultValue": "default", 
                            "label": "Index", 
                            "options": {
                                "createSearchChoice": true, 
                                "blackList": "^_.*$", 
                                "endpointUrl": "data/indexes"
                            }, 
                            "type": "singleSelect", 
                            "field": "index", 
                            "validators": [
                                {
                                    "minLength": 1, 
                                    "maxLength": 80, 
                                    "errorMsg": "Length of index name should be between 1 and 80.", 
                                    "type": "string"
                                }
                            ]
                        }, 
                        {
                            "required": true, 
                            "label": "Directory", 
                            "type": "text", 
                            "field": "dmarc_directory", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "maxLength": 8192, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string"
                                }
                            ], 
                            "help": "Location where DMARC aggregate report files are dropped"
                        }, 
                        {
                            "required": true, 
                            "defaultValue": "30", 
                            "label": "Quiet time", 
                            "type": "text", 
                            "field": "quiet_time", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "maxLength": 8192, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string"
                                }
                            ], 
                            "help": "Ignore files that have a modification time of less than n seconds ago."
                        }, 
                        {
                            "required": false, 
                            "defaultValue": true, 
                            "label": "Resolve IP", 
                            "type": "checkbox", 
                            "field": "resolve_ip", 
                            "help": "Resolve the source_ip field in the DMARC XML aggregate report"
                        }
                    ], 
                    "title": "DMARC directory", 
                    "name": "dmarc_directory"
                }
            ], 
            "title": "Inputs", 
            "description": "Manage your data inputs"
        }
    }
}