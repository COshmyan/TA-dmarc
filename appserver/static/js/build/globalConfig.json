{
    "meta": {
        "restRoot": "TA_dmarc", 
        "name": "TA-dmarc", 
        "displayName": "TA-dmarc", 
        "version": "1.0.0", 
        "apiVersion": "3.0.0"
    }, 
    "pages": {
        "configuration": {
            "description": "Set up your add-on", 
            "title": "Configuration", 
            "tabs": [
                {
                    "entity": [
                        {
                            "validators": [
                                {
                                    "minLength": 1, 
                                    "errorMsg": "Length of Account name should be between 1 and 50", 
                                    "type": "string", 
                                    "maxLength": 50
                                }, 
                                {
                                    "pattern": "^[a-zA-Z]\\w*$", 
                                    "errorMsg": "Account name must start with a letter and followed by alphabetic letters, digits or underscores.", 
                                    "type": "regex"
                                }
                            ], 
                            "label": "Account name", 
                            "type": "text", 
                            "field": "name", 
                            "help": "Enter a unique name for this account.", 
                            "required": true
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 1, 
                                    "errorMsg": "Length of username should be between 1 and 200", 
                                    "type": "string", 
                                    "maxLength": 200
                                }
                            ], 
                            "label": "Username", 
                            "type": "text", 
                            "field": "username", 
                            "options": {
                                "placeholder": "Enter the username here"
                            }, 
                            "help": "Enter the username for this account.", 
                            "required": true
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 1, 
                                    "errorMsg": "Length of password should be between 1 and 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "label": "Password", 
                            "type": "text", 
                            "encrypted": true, 
                            "field": "password", 
                            "help": "Enter the password for this account.", 
                            "required": true
                        }
                    ], 
                    "name": "account", 
                    "table": {
                        "actions": [
                            "edit", 
                            "delete", 
                            "clone"
                        ], 
                        "header": [
                            {
                                "label": "Account name", 
                                "field": "name"
                            }, 
                            {
                                "label": "Username", 
                                "field": "username"
                            }
                        ]
                    }, 
                    "title": "Account"
                }, 
                {
                    "name": "logging", 
                    "entity": [
                        {
                            "options": {
                                "disableSearch": true, 
                                "autoCompleteFields": [
                                    {
                                        "label": "DEBUG", 
                                        "value": "DEBUG"
                                    }, 
                                    {
                                        "label": "INFO", 
                                        "value": "INFO"
                                    }, 
                                    {
                                        "label": "WARNING", 
                                        "value": "WARNING"
                                    }, 
                                    {
                                        "label": "ERROR", 
                                        "value": "ERROR"
                                    }, 
                                    {
                                        "label": "CRITICAL", 
                                        "value": "CRITICAL"
                                    }
                                ]
                            }, 
                            "label": "Log level", 
                            "type": "singleSelect", 
                            "field": "loglevel", 
                            "defaultValue": "INFO"
                        }
                    ], 
                    "title": "Logging"
                }
            ]
        }, 
        "inputs": {
            "description": "Manage your data inputs", 
            "title": "Inputs", 
            "services": [
                {
                    "name": "dmarc_directory", 
                    "entity": [
                        {
                            "validators": [
                                {
                                    "pattern": "^[a-zA-Z]\\w*$", 
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores.", 
                                    "type": "regex"
                                }, 
                                {
                                    "minLength": 1, 
                                    "errorMsg": "Length of input name should be between 1 and 100", 
                                    "type": "string", 
                                    "maxLength": 100
                                }
                            ], 
                            "label": "Name", 
                            "type": "text", 
                            "field": "name", 
                            "help": "Enter a unique name for the data input", 
                            "required": true
                        }, 
                        {
                            "validators": [
                                {
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$", 
                                    "errorMsg": "Interval must be an integer.", 
                                    "type": "regex"
                                }
                            ], 
                            "label": "Interval", 
                            "type": "text", 
                            "field": "interval", 
                            "help": "Time interval of input in seconds.", 
                            "required": true
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 1, 
                                    "errorMsg": "Length of index name should be between 1 and 80.", 
                                    "type": "string", 
                                    "maxLength": 80
                                }
                            ], 
                            "label": "Index", 
                            "type": "singleSelect", 
                            "options": {
                                "endpointUrl": "data/indexes", 
                                "createSearchChoice": true, 
                                "blackList": "^_.*$"
                            }, 
                            "defaultValue": "default", 
                            "field": "index", 
                            "required": true
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "label": "Directory", 
                            "type": "text", 
                            "field": "dmarc_directory", 
                            "help": "Location where DMARC aggregate report files are dropped", 
                            "required": true
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "label": "Quiet time", 
                            "type": "text", 
                            "field": "quiet_time", 
                            "defaultValue": "30", 
                            "help": "Ignore files that have a modification time of less than n seconds ago.", 
                            "required": true
                        }, 
                        {
                            "label": "Resolve IP", 
                            "type": "checkbox", 
                            "field": "resolve_ip", 
                            "defaultValue": true, 
                            "help": "Resolve the source_ip field in the DMARC XML aggregate report", 
                            "required": false
                        }
                    ], 
                    "title": "DMARC directory"
                }, 
                {
                    "name": "dmarc_imap", 
                    "entity": [
                        {
                            "validators": [
                                {
                                    "pattern": "^[a-zA-Z]\\w*$", 
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores.", 
                                    "type": "regex"
                                }, 
                                {
                                    "minLength": 1, 
                                    "errorMsg": "Length of input name should be between 1 and 100", 
                                    "type": "string", 
                                    "maxLength": 100
                                }
                            ], 
                            "label": "Name", 
                            "type": "text", 
                            "field": "name", 
                            "help": "Enter a unique name for the data input", 
                            "required": true
                        }, 
                        {
                            "validators": [
                                {
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$", 
                                    "errorMsg": "Interval must be an integer.", 
                                    "type": "regex"
                                }
                            ], 
                            "label": "Interval", 
                            "type": "text", 
                            "field": "interval", 
                            "help": "Time interval of input in seconds.", 
                            "required": true
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 1, 
                                    "errorMsg": "Length of index name should be between 1 and 80.", 
                                    "type": "string", 
                                    "maxLength": 80
                                }
                            ], 
                            "label": "Index", 
                            "type": "singleSelect", 
                            "options": {
                                "endpointUrl": "data/indexes", 
                                "createSearchChoice": true, 
                                "blackList": "^_.*$"
                            }, 
                            "defaultValue": "default", 
                            "field": "index", 
                            "required": true
                        }, 
                        {
                            "label": "Global Account", 
                            "type": "singleSelect", 
                            "field": "global_account", 
                            "options": {
                                "referenceName": "account"
                            }, 
                            "help": "Use the account configured in the setup tab", 
                            "required": true
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "label": "IMAP server", 
                            "type": "text", 
                            "field": "imap_server", 
                            "help": "Specify the IMAP server", 
                            "required": true
                        }, 
                        {
                            "label": "Use SSL", 
                            "type": "checkbox", 
                            "field": "use_ssl", 
                            "defaultValue": true, 
                            "help": "", 
                            "required": false
                        }, 
                        {
                            "label": "Resolve IP", 
                            "type": "checkbox", 
                            "field": "resolve_ip", 
                            "defaultValue": true, 
                            "help": "Resolve the source_ip field in the DMARC aggregate reports.", 
                            "required": false
                        }
                    ], 
                    "title": "DMARC mailbox"
                }
            ], 
            "table": {
                "actions": [
                    "edit", 
                    "enable", 
                    "delete", 
                    "clone"
                ], 
                "moreInfo": [
